<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="tipohabitacion" extends="struts-default" namespace="/tipohabitacion">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>  
        <global-results>
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">sampleComplexBean\[\d+\]\..+$, actionMessages\[\d+\]</param>
            </result>              
            <result name="input" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">actionErrors\[\d+\], fieldErrors\..+$, actionMessages\[\d+\]</param>
            </result>                 
        </global-results>      
        
        <!--PRUEBA ACCION TESTING-->
        <action name="creartipohabitacion" method="creartipohabitacion" class="Acciones.Sistema.TipoHabitacionAction">
            <result name="success">/exito.jsp</result>
            <result name="input">/input.jsp</result>
        </action>
        <!--COMIENZO ACCIONES-->       
        <action name="registrar" method="registrar" class="Acciones.Sistema.TipoHabitacionAction"/>
        <action name="modificar" method="modificar" class="Acciones.Sistema.TipoHabitacionAction"/>    
        <action name="eliminar" method="eliminar" class="Acciones.Sistema.TipoHabitacionAction"/>     
        <action name="listar" method="listar" class="Acciones.Sistema.TipoHabitacionAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="excludeProperties">id,nombre</param>
            </result>
        </action>        
        <action name="editar" method="editar" class="Acciones.Sistema.TipoHabitacionAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="excludeProperties">lista</param>
            </result>   
        </action>
        <!--FIN ACCIONES-->       
    </package>
</struts>