<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="sexo" extends="struts-default" namespace="/root/sexo">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        <interceptors>
            <interceptor name="mylogging"
                         class="Interceptor.InterceptorRoot">
            </interceptor>
            <interceptor-stack name="loggingStack">
                <interceptor-ref name="mylogging" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="loggingStack"/>  
        <global-results>
            <result name="login">/WEB-INF/index.jsp</result>
        </global-results> 
        <action name="guardarOModificar" method="guardarOModificar" class="Acciones.Root.SexoAction">
            <result name="success" type="redirect">listar</result>
            <result name="input" type="tiles">/root/sexo/altamodificacion.tiles</result>
        </action>
        <action name="eliminar" method="eliminar" class="Acciones.Root.SexoAction">
            <result name="success" type="redirect">listar</result>
        </action>
        <action name="listar" method="list" class="Acciones.Root.SexoAction">
            <result name="success" type="tiles">/root/sexo/todos.tiles</result>
        </action>
        <action name="editar" method="editar" class="Acciones.Root.SexoAction">
            <result name="success" type="tiles">/root/sexo/altamodificacion.tiles</result>
            <result name="error" type="redirect">listar</result>
        </action> 
        <action name="nuevo" method="nuevo" class="Acciones.LinkAction">
            <result name="nuevo" type="tiles">/root/sexo/altamodificacion.tiles</result>
        </action>              
    </package>
</struts>