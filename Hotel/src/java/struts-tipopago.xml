<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="tipopago" extends="struts-default" namespace="/root/tipopago">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        <action name="guardarOModificar" method="guardarOModificar" class="Acciones.TipoPagoAction">
            <result name="success" type="redirect">listar</result>
            <result name="input" type="tiles">/root/tipopago/AltaModificacion.tiles</result>
        </action>
        <action name="eliminar" method="eliminar" class="Acciones.TipoPagoAction">
            <result name="success" type="redirect">listar</result>
        </action>
        <action name="listar" method="list" class="Acciones.TipoPagoAction">
            <result name="success" type="tiles">/root/tipopago/Todos.tiles</result>
        </action>
        <action name="editar" method="editar" class="Acciones.TipoPagoAction">
            <result name="success" type="tiles">/root/tipopago/AltaModificacion.tiles</result>
        </action> 
        <action name="nuevo" method="nuevo" class="Acciones.LinkAction">
            <result name="nuevo" type="tiles">/root/tipopago/AltaModificacion.tiles</result>
        </action>              
    </package>
</struts>