<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="tarifa" extends="struts-default" namespace="/tarifa">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>  
        <global-results>
            <result name="success" type="json">
                <param name="root">action</param>   
                <param name="ignoreHierarchy">false</param>
                <param name="excludeProperties">
                    actionErrors.*,
                    fieldErrors.*,
                    lista,
                    texts,
                    error.*,
                    errorMessages.*,
                    locale,
                    tarifa,
                </param>                    
            </result>              
            <result name="input" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="root">action</param>   
                <param name="includeProperties">actionErrors.*,
                    fieldErrors.*,
                    codigo</param>
            </result>                 
        </global-results>  
             
        <!--COMIENZO ACCIONES-->
        <action name="registrar" method="registrar" class="Acciones.Sistema.TarifaAction"/>      
        <action name="modificar" method="modificar" class="Acciones.Sistema.TarifaAction"/>
        <action name="eliminar" method="eliminar" class="Acciones.Sistema.TarifaAction"/>
        <action name="listar" method="listar" class="Acciones.Sistema.TarifaAction">
            <result name="success" type="json">
                <param name="root">action</param>       
                <param name="excludeProperties">model,tarifa</param>
            </result>
        </action>        
        <action name="editar" method="editar" class="Acciones.Sistema.TarifaAction">
            <result name="success" type="json">
                <param name="root">action</param>   
                <param name="excludeProperties">lista,tarifa</param>
            </result>   
        </action>
        <!--FIN ACCIONES-->
    </package>
</struts>